package pio_1;

import java.util.Random;

public class PIO_1 {

   
    public static void main(String[] args) {
     Random kostka = new Random();
        
        
        int liczba;
        int gracz;
        
        do{   
        liczba = kostka.nextInt(6) + 1;
        System.out.println("Liczba na kostce: " + liczba);
        
        gracz = kostka.nextInt(6) + 1;
        System.out.println("Liczba wybrana przez gracza: " + gracz);
        
        if(liczba == gracz){
            System.out.println("Gratuacje! Udało ci się!");          
        } else {
            System.out.println("Niestety nie udało ci sie odgadnąć :(");              
        }
        
        
        }while(liczba != gracz); 
    }
    
}
